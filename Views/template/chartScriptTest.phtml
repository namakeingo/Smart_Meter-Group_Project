
<script>
    google.charts.load('current', {packages: ['corechart', 'bar']});
    google.charts.setOnLoadCallback(function(){drawChart('Day')});
    google.charts.setOnLoadCallback(function(){drawChart('Week')});
    google.charts.setOnLoadCallback(function(){drawChart('Month')});
    google.charts.setOnLoadCallback(function(){drawChart('Year')});

    function drawChart(tag) {
        if {tag==='Day'}{
            document.cookie = "period= 'PT1H', from='today 00:00:00', periodName='Hours', format='H:i'";
        }
    else if {tag==='Week'}{
            document.cookie = "period= 'P1D', from='last monday 00:00:00', periodName='Days', format='D'";
        }
    else if {tag==='Month'}{
            document.cookie = "period= 'P1W', from='first monday of this month 00:00:00 -7 days', periodName='Weeks', format='d-m'";
        }
    else if {tag==='Year'}{
            document.cookie = "period= 'P1M', from= 'first day of January 00:00:00', periodName='Months', format='M'";
        }
        var data = google.visualization.arrayToDataTable([
            ['Hours', '<?php echo $view->pageTitle ?> Consumption'],
            <?php
            $view->period='PT1H';
            $view->from='today 00:00:00';
            $view->periodName='Hours';
            $Consum = new ConnectionConsumption($view->type,$view->period, $view->from, 'now');
            $consumDataSet = $Consum->getData();
            $view->kwhConsum = $consumDataSet->getConsumptionArray();
            foreach ($view->kwhConsum as $value) {
                echo '[\''.$value->getDate()->modify('-1 hour')->format('H:i').' - '
                    .$value->getDate()->modify('+1 hour')->format('H:i')
                    .'\','.$value->getConsumption().'],
            ';
            }
            ?>
        ]);
        var periodName = '<?php echo $view->periodName ?>';
        // set common style for chart
        var options = styleChart(data.getNumberOfRows(), periodName);
        var chart = new google.visualization.BarChart(document.getElementById('chart_div'+tag));
        chart.draw(data, options);
    }

